# Generated iptables rules file

*nat
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]

# Enable SNAT for outbound connections to the public network
-A POSTROUTING -s 192.168.100.0/24 -o eth0 -j MASQUERADE
-A POSTROUTING -s 192.168.200.0/24 -o eth0 -j MASQUERADE

COMMIT

*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]

# Allow traffic from the private network to the DMZ and vice versa
-A FORWARD -s 192.168.200.0/24 -d 192.168.100.0/24 -j ACCEPT
-A FORWARD -s 192.168.100.0/24 -d 192.168.200.0/24 -j ACCEPT

# Allow established and related traffic for all zones
-A FORWARD -m state --state ESTABLISHED,RELATED -j ACCEPT

# Drop all other forwarded traffic by default
-A FORWARD -j DROP

COMMIT
